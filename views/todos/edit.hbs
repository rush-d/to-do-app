<h3>Edit To-Do</h3>
<div class="row">
    <form action="/todos/{{todo._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{todo.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your To-Do:</h5>
                <textarea id="body" name="body">{{todo.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Enter the Due date:</h5>
                <input id="duedate" name="duedate" type="datetime-local">Last added Due Date: {{todo.duedate}}
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>