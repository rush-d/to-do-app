<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your To-Dos</p>
{{#if todos}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created At</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <td><a href="/todos/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY h:mm:ss a'}}</td>
            <td>{{duedate}}</td>
            <td>
                <a href="/todos/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
            <td>
                <form action="/todos/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any todos</p>
{{/if}}