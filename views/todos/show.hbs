<div class="row">
    <div class="col s12 m8">
        <h3>{{todo.title}}
            <small>{{{editIcon todo.user user todo._id false}}}</small>
        </h3>
        <div class="card todo">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{todo.body}}}
            </div>
        </div>
    </div>
</div>